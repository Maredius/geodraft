# Geodraft Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=geonode
GEODATABASE_NAME=geonode_data
GEODATABASE_PASSWORD=postgres

# ============================================
# Django Configuration
# ============================================
SECRET_KEY=change-this-secret-key-in-production-use-a-long-random-string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
SITEURL=http://localhost:8000/

# ============================================
# GeoServer Configuration
# ============================================
GEOSERVER_ADMIN_USER=admin
GEOSERVER_ADMIN_PASSWORD=geoserver
GEOSERVER_LOCATION=http://geoserver:8080/geoserver/
GEOSERVER_PUBLIC_LOCATION=http://localhost:8080/geoserver/

# ============================================
# Versioned Editing Configuration
# ============================================
ENABLE_AUTO_VERSIONING=True
MAX_VERSIONS_PER_FEATURE=100
DEFAULT_BRANCH_NAME=master
ENABLE_CONFLICT_DETECTION=True
AUDIT_LOG_ENABLED=True

# ============================================
# Email Configuration (for notifications)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
DEFAULT_FROM_EMAIL=geodraft@example.com

# ============================================
# Production Settings (uncomment for production)
# ============================================
# DEBUG=False
# ALLOWED_HOSTS=geodraft.example.com,www.geodraft.example.com
# SITEURL=https://geodraft.example.com/
# SECRET_KEY=GENERATE_A_LONG_RANDOM_SECRET_KEY
# DB_PASSWORD=USE_A_STRONG_PASSWORD
# GEOSERVER_ADMIN_PASSWORD=USE_A_STRONG_PASSWORD
